<% layout('boilerplate')%>
    <div>
        <h1>TODO List</h1>
        <% for(let item of items) { %>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                        <%= item.desc %>
                    </p>
                    <a href="/edit/<%=item._id%>" class="card-link btn btn-info">Edit</a>
                    <form class="d-inline" action="/<%=item._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
    </div>